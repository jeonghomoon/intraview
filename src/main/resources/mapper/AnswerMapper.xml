<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd"
>
<mapper namespace="kr.intraview.mapper.AnswerMapper">

  <resultMap id="answerResult" type="kr.intraview.model.Answer">
    <id property="id" column="answer_id" />
    <result property="questionId" column="question_id" />
    <result property="content" column="answer_content" />
    <result property="feedback" column="answer_feedback" />
    <result property="followup" column="answer_followup" />
  </resultMap>

  <insert
    id="insertAnswer"
    parameterType="kr.intraview.model.Answer"
  >
    INSERT INTO answer (id, question_id, content, feedback, followup)
    VALUES (#{id}, #{questionId}, #{content}, #{feedback}, #{followup})
  </insert>

</mapper>
